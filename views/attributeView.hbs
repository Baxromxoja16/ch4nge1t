<div class="tag">
  <div class="tag-info">
    <div class="container">
      <div class="row">
        <div class="col-9">
          <div class="tag-info-text">
            <h2 class="tag-head">{{productName}}</h2>
            <p class="tag-text">{{productText}}</p>
          </div>
          <div class="tag-syntax">
            <h3 class="syntax">Sintaksis</h3>
            <hr>
            <p class="syntax-text">{{productSyntax}}</p>
          </div>
          {{#if productImg}}
          <div class="infotag">
            <h3 class="infotag-info"></h3>
            <img src="/images/{{productImg}} " alt="jpg">
            <hr>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>