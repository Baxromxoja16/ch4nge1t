<a href="/admin/footerInfo/edit/{{id}}"><button type="button" class="btn btn-primary">O`zgartirish</button></a>
                            {{/each}}
                        </ul>
                    </div>
                </div>

                {{!-- <div class="col-4">
                    <div class="footer-logo">
                        <a class="logo-link" href="#">WebReference</a>
                    </div>
                </div> --}}
            </div>
        </div>
        {{else}}
        <form action="/admin/footerInfo/add" method="POST">
            <div class="manbaa" style="display: flex;justify-content: space-evenly;">
                <div class="manbaa-flex">
                    <br>
                    <label for="">Instagram</label>
                    <input id="link1" name="link1" type="text" />
                    <br><br>
                    <label for="">Telegram</label>
                    <input id="link2" name="link2" type="text" />
                    <br><br>
                    <label for="">Change </label>
                    <input id="link3" name="link3" type="text" />
                    <br>
                    <br /><br />
                    <div class="cub">
                        <button class="btn btn-primary" type="submit">Send</button>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </form>
        {{/if}}
    </div>
</div>