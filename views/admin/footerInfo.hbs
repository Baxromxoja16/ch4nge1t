<div class="container">
    <h1>Footer uchun Qo'shish bo'limi</h1>
    <div class="row">
        {{#if footerRight}}
        <div class="container">
            <div class="row foot">
                {{#each navInfo}}
                <div class="col-3">
                    <div class="footer-social">
                        <h3 class="social-head">Aloqa uchun</h3>
                        <ul class="social-title">
                            <li class="social-items"><a class="social-link" href="tel:{{tel}}"><i
                                        class="fas fa-phone-volume"></i> {{tel}}</a></li>
                            {{/each}}
                            {{#each footer}}
                            <li class="social-items"><a class="social-link" href="{{link1}}"> <i
                                        class="fab fa-instagram"></i></a></li>
                            <li class="social-items"><a class="social-link" href="{{link2}}"><i
                                        class="fab fa-telegram"></i></a></li>
                            <li class="social-items"><a class="social-link" href="{{link3}}"><i
