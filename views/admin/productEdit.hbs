<h1>Hello edit page</h1>
<form action="/admin/product/edit/{{product.id}}" method="POST" enctype="multipart/form-data">
    <div class="card-body">
        <div class="form-group">
            <label for="productName">Mahsulot nomi</label>
            <input type="text" class="form-control" name="productName" id="productName" value="{{product.productName}}">
        </div>

        <div class="form-group">
            <label for="productText">Mahsulot text</label>
            <input type="text" class="form-control" name="productText" id="productText" value="{{product.productText}}">
        </div>

        <div class="form-group">
            <label for="productSyntax">Mahsulot sintaksis</label>
            <input type="text" class="form-control" name="productSyntax" id="productSyntax"
                value="{{product.productSyntax}}">
        </div>
        <div class="form-group">
            <label for="productImg">Mahsulot rasm</label>
            <input type="file" class="form-control" name="productImg" id="productImg" value="{{product.productImg}}">
        </div>

        <div class="form-group">
            <label for="categoryId">Mahsulot kategoriyasi</label>
            <select class="form-control" name="categoryId" id="categoryId">
                {{#each categories}}
                <option value="{{id}}" id="{{id}}">{{categoryName}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">O'zgartirish</button>
        {{!-- <a href="/admin/product/read" class="btn btn-primary">Yaratish</a> --}}
    </div>
</form>